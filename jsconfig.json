{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "@lib/*": ["lib/*"],
            "@api/*": ["lib/api/*"],
            "@handlers/*": ["lib/handlers/*"],
            "@schemas/*": ["lib/schemas/*"],
            "@imap-core/*": ["imap-core/*"],
            "@test/*": ["test/*"]
        }
    },
    "include": [
        "**/*.js",
        "types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "public",
        "docs",
        "test/fixtures"
    ]
}