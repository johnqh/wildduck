{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "source": {
        "include": ["lib", "imap-core", "README.md"],
        "exclude": ["node_modules", "test", "docs"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "default": {
            "outputSourceFiles": true
        }
    },
    "opts": {
        "destination": "./docs/jsdoc",
        "recurse": true,
        "readme": "./README.md",
        "template": "node_modules/docdash"
    },
    "docdash": {
        "static": true,
        "sort": true,
        "search": true,
        "collapse": true,
        "typedefs": true,
        "removeQuotes": "none",
        "scripts": [],
        "menu": {
            "Github": {
                "href": "https://github.com/johnqh/wildduck",
                "target": "_blank",
                "class": "menu-item",
                "id": "github-link"
            },
            "API Docs": {
                "href": "/docs/api/",
                "target": "_blank",
                "class": "menu-item",
                "id": "api-docs-link"
            }
        }
    }
}
