        "@ensdomains/ensjs": "^4.0.2",
        "@fidm/x509": "1.2.1",
        "@opensearch-project/opensearch": "3.5.1",
        "@postalsys/vmc": "1.1.2",
        "@root/acme": "3.1.0",
        "@root/csr": "0.8.1",
        "@solana/web3.js": "^1.98.4",
        "accesscontrol": "2.2.1",
