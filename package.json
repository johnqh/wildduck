        "mobileconfig": "2.4.0",
        "mongo-cursor-pagination": "9.1.0",
        "mongodb": "4.17.2",
        "mongodb-extended-json": "1.11.1",
        "msgpack5": "6.0.2",
        "node-forge": "1.3.1",
