{
    "name": "@0xmail/wildduck",
    "version": "6.8.0",
    "description": "IMAP/POP3 server built with Node.js and MongoDB",
    "main": "server.js",
    "scripts": {
        "test": "mongosh --eval 'db.dropDatabase()' wildduck-test && redis-cli -n 13 flushdb && npm run runtest",
        "test:proto": "NODE_ENV=test grunt proto",
        "test:auth": "node test/run-auth-tests.js",
        "test:auth:api": "node test/run-auth-tests.js --api",
        "test:auth:imap": "node test/run-auth-tests.js --imap",
        "test:auth:pop3": "node test/run-auth-tests.js --pop3",
        "test:auth:smtp": "node test/run-auth-tests.js --smtp",
        "printconf": "NODE_CONFIG_ONLY=true npm start",
        "runtest": "NODE_ENV=test grunt",
        "runci": "npm run printconf && npm run runtest",
        "apidoc": "apidoc -i lib/api/ -o docs/api/",
        "show": "NODE_CONFIG_ONLY=true node server.js",
        "start": "node server.js",
        "update": "rm -rf node_modules package-lock.json && ncu -u && npm install",
        "generate-api-docs": "GENERATE_API_DOCS=true REGENERATE_API_DOCS=true node server.js",
        "ai:status": "node scripts/ai-dev-helper.js",
        "ai:json": "node scripts/ai-dev-helper.js json",
        "ai:help": "node scripts/ai-dev-helper.js help",
        "dev:quick-test": "NODE_ENV=test grunt mochaTest:api --force",
        "dev:blockchain-test": "NODE_ENV=test npx mocha test --grep 'signature' --timeout 10000",
        "dev:check-all": "npm run printconf && grunt eslint && npm run ai:status"
    },
    "keywords": [
        "imap",
        "mail server"
    ],
    "author": {
        "name": "John Huang",
        "email": "johnqh@yahoo.com"
    },
    "license": "BUSL-1.1",
    "homepage": "https://wildduck.email/",
    "devDependencies": {
        "ajv": "8.17.1",
        "chai": "4.3.10",
        "docsify-cli": "4.4.4",
        "eslint": "8.57.0",
        "eslint-config-nodemailer": "1.2.0",
        "eslint-config-prettier": "10.1.8",
        "grunt": "1.6.1",
        "grunt-cli": "1.5.0",
        "grunt-eslint": "24.3.0",
        "grunt-mocha-test": "0.13.3",
        "grunt-shell-spawn": "0.5.0",
        "grunt-wait": "0.3.0",
        "imapflow": "1.0.195",
        "mailparser": "3.7.4",
        "mocha": "11.7.1",
        "request": "2.88.2",
        "sinon": "^21.0.0",
        "supertest": "7.1.4"
    },
